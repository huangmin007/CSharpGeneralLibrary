<?xml version="1.0" encoding="utf-8" ?>

<grammar
   mode = "voice"
   root = "test"
   tag-format = "semantics/1.0"
   version = "1.0"
   xml:lang = "zh-CN"
   xmlns = "http://www.w3.org/2001/06/grammar">

    <rule id="test" scope="public">
        <one-of>
            <item weight=".5">测试</item>
            <item>赖成</item>
            <item>开始</item>
            <item>王汉民</item>
        </one-of>
        <one-of>
            <item>像</item>
            <item>是</item>
            <item>不是</item>
            <item>不像</item>
        </one-of>
        <one-of>
            <item>飞机</item>
            <item>二货</item>
            <item>电脑</item>
            <item>汽车</item>
        </one-of>
    </rule>

    <rule id="color" scope="public">
        <item>背景</item>
        <one-of>
            <item>红色</item>
            <item>绿色</item>
            <item>蓝色</item>
        </one-of>
    </rule>

</grammar>