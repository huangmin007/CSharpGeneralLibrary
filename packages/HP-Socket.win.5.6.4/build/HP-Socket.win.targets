<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <!-- x64 -->
    <When Condition="'$(Platform)' == 'x64'">
      <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)\..\content\HPSocket\x64\*.*">
            <Link>%(RecursiveDir)%(FileName)%(Extension)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
      </ItemGroup>
    </When>
    
    <!-- x86, and Win32 -->
    <When Condition="'$(Platform)' == 'x86'">
      <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)\..\content\HPSocket\x86\*.*">
            <Link>%(RecursiveDir)%(FileName)%(Extension)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
      </ItemGroup>
    </When>
    <!-- other -->
   <Otherwise>
      <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)\..\content\HPSocket\hpsocket_en.txt">
            <Link>%(RecursiveDir)%(FileName)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
      </ItemGroup>
      <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)\..\content\HPSocket\hpsocket_cn.txt">
            <Link>%(RecursiveDir)%(FileName)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>